<UserControl x:Class="PL.userControls.recentBuyingUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Name="recentBuyingsDataGrid" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="440" Margin="10,0,0,0" VerticalAlignment="Top" Width="790">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Price" Binding="{Binding PricePerOneProduct}"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}"/>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
